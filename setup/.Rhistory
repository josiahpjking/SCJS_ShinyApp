readfun=read.csv()
extract_name_data<-function(df,var_string,readfun=read.csv()){
alldat = readfun(df)
names(alldat)<-tolower(names(alldat))
var_data = alldat[,grepl(var_string,names(alldat))]
var_data$sourcefile = df
return(var_data)
}
extract_name_data("../data/pdiv9.5.test.rds","perc",readfun=readRDS)
extract_name_data("../data/pdiv9.5.test.rds","perc|p",readfun=readRDS)
